<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ff6df8ff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="about"
        android:id="@+id/aboutButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="aboutButtonClicked"
        android:layout_marginBottom="55dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="highscores"
        android:id="@+id/highscoresButton"
        android:layout_above="@+id/aboutButton"
        android:onClick="highscoresButtonClicked"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play"
        android:id="@+id/playButton"
        android:layout_above="@+id/highscoresButton"
        android:layout_centerHorizontal="true"
        android:onClick="playButtonClicked"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/title"
        android:id="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:textSize="50dp"
        android:textAlignment="center"
        android:gravity="center"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frontPageView"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@mipmap/ic_launcher"

        android:layout_above="@+id/playButton" />

</RelativeLayout>
